{
  bg[SELECTED]	    = "#B4C994"
}

style "theme-button" = "theme-wider"
{
  bg[NORMAL]				= "#F4F4F4"
  bg[PRELIGHT]			= "#B4C994"
  bg[ACTIVE]				= "#B4C994"
}

style "theme-slider" = "theme-button"
{
  bg[NORMAL]				= "#F5F3EB"
}

style "theme-scrollbar" = "theme-button"
{
  xthickness = 2
  ythickness = 2
  bg[NORMAL]				= "#F5F3EB"
}

style "theme-notebook" = "theme-wide"
{
  bg[NORMAL]      = "#efefef"
  bg[INSENSITIVE] = "#efefef"
  bg[SELECTED]    = "#B4C994"
}

