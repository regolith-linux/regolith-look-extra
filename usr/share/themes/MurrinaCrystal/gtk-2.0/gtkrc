{
  engine "murrine"
  {
    glowstyle	    = 4
    gradient_shades = {2.0, 1.0, 1.0, 2.0}
    highlight_shade = 1.0
  }
}
# calendar
style "theme-calendar" = "theme-slim"
{
  engine "murrine"
  {
    contrast = 0.8
  }
}

