 base[ACTIVE] = "#dddddd"
 base[PRELIGHT] = "#ffffff"
 base[SELECTED]	= "#c5c5c5"
 base[INSENSITIVE] = "#f4f4f4"

 text[NORMAL] = "#000000"
 text[ACTIVE] = "#505050"
 text[PRELIGHT] = "#353535"
 text[SELECTED] = "#353535"
 text[INSENSITIVE] = "#9b9b9b"

 engine "murrine" 
 {
  contrast = 1.0
  glazestyle = 0
  menubarstyle = 3
  menubaritemstyle = 1
  listviewheaderstyle = 2
  animation = TRUE
  highlight_shade = 1.1000011
  roundness = 2
  menuitemstyle = 0
  menustyle = 0
  listviewstyle = 1
  scrollbarstyle = 3
 }
}

